page {
  color: #000;
}

.city-seach-city {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  color: #999;
  font-size: 28rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
  /* height: 100rpx; */
}
input{
  width: 100%;
}
.img-input {
  width: 80%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 16rpx;
}
.city-seach-city image {
  width: 30rpx;
  margin-right:14rpx;
}

.city-seach-city text {
  font-size: 32rpx;
  white-space: nowrap;
}
.line {
  width: 100vw;
  height: 10rpx;
  position: relative;
  left: 0rpx;
  top: 0;
  background-color: #f1f1f1;
}
.city-main {
  width: 100%;
  color: #000;
  padding-bottom: 20rpx;
}
.city-main-title {
  font-size: 30rpx;
  padding-top: 30rpx;
  margin-bottom: 20rpx;
}
.city-main-pane {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.city-main-pane + .city-main-pane {
  margin-top: 12rpx;
}
.city-main-item {
  width: 30%;
  text-align: center;
  padding: 10rpx 0;
  border-radius: 10rpx;
  background-color: #f1f1f1;
}
.special {
  position: relative;
  background-color: #3ea8e6;
}
.special image {
  position: absolute;
  width: 36rpx;
  top: 50%;
  left: 24%;
  transform: translate(-50%, -50%);
}

.global-city {
  width: 100%;
  color: #000;
}
.global-city-pane-title {
  width: 100vw;
  position: relative;
  left: -20rpx;
  box-sizing: border-box;
  background-color: #f1f1f1;
  padding: 12rpx 0 12rpx 20rpx;
}
.global-city-pane-city {
  width: 100vw;
  position: relative;
  left: -20rpx;
  padding: 24rpx 0 24rpx 20rpx;

  border-bottom: 1px solid #f1f1f1;
}
