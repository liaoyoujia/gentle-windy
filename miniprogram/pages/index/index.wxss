/* miniprogram/pages/index/index.wxss */

.mainBg {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
}
.main {
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  height: 100vh;
  padding-bottom: 30rpx;
}

.person-info {
  display: flex;
  justify-content: flex-start;
  margin-top: 100rpx;
  align-items: center;
}
.avatar {
  overflow: hidden;
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.nick-name {
  color: #fff;
  font-size: 28rpx;
}
.icon-triangle {
  margin-left: 10rpx;
}
.icon-triangle image {
  width: 18rpx;
  height: 22rpx;
  display: block;
}
.address {
  display: flex;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.name {
  width: 70%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
}
.name text {
  width: 30%;
  font-size: 60rpx;
}
.name image {
  width: 30rpx;
  height: 34rpx;
}
.time {
  font-size: 24rpx;
  color: #fff;
}

.lament {
  padding-left: 20rpx;
  margin-top: 20rpx;
  text-align: left;
  font-size: 24rpx;
  color: #fff;
}
.temperature {
  text-align: center;
  color: #fff;
  font-size: 130rpx;
  margin-top: 90rpx;
}
.weather-description {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  margin-top: 60rpx;
}
.visibility {
  margin-top: 40rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 20rpx;
}
.sign {
  vertical-align: super;
  font-size: 48rpx;
}
.three-days {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  font-size: 24rpx;
  background: rgba(0, 0, 0, 0.4);
  margin-top: 60rpx;
  text-align: center;
}
.three-title {
  width: 100%;
  padding: 12rpx 0 18rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #b5b5b5;
}
.three-list {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.three-item {
  width: 30%;
  height: 220rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.three-item  + .three-item {
  margin-left: 30rpx;
}
.three-item image {
  width: 36rpx;
  height: 36rpx;
}
.item-wheather {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.windy-table {
  margin-top: 20rpx;
  font-size: 24rpx;
}
.windy-tr {
  width: 100%;
  overflow: hidden;
}
.windy-td {
  float: left;
  text-align: center;
  padding: 12rpx 0;
  width: 25%;
  height: 100rpx;
  box-sizing: border-box;
  border: 1px solid #b5b5b5;
  margin-left: -1px;
  background: rgba(0, 0, 0, 0.4);
  margin-top: -1px;
}
.nowData-td {
  margin-bottom: 12rpx;
}
.hour-forcast {
  width: 100%;
  font-size: 24rpx;
  color: #fff;
  margin-top: 20rpx;
  background: rgba(0, 0, 0, 0.4);
}
.hour-forcast-title {
  text-align: center;
  padding: 12rpx 0;
  border-bottom: 1px solid #b5b5b5;
}
.hour-forcast-body {
  width: 100%;
  margin-top: 24rpx;
}
.hour-forcast-item {
  border-radius: 12rpx;
}
.hour-forcast-item + .hour-forcast-item {
  margin-left: 20rpx !important;
}
.hour-forcast-item .windy-td {
  background-color: #666 !important;
}
.hour-forcast-bottom {
  text-align: center;
  padding: 12rpx 0;
  width: calc(100% - 4px);
  color: #fff;
}
.hour-swiper {
  height: 350rpx;
}
.life-style {
  background: rgba(0, 0, 0, 0.4);
  margin-top: 20rpx;
}
.life-item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.life-item + .life-item {
  border-top: 1px solid #b5b5b5;
}
.life-icon {
  width: 160rpx;
  padding: 24rpx;
  box-sizing: border-box;
}
.life-icon image {
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.weather-cozy {
  font-size: 32rpx;
  line-height: 42rpx;
}
.weather-descr {
  margin-top: 10rpx;
  font-size: 24rpx;
  line-height: 34rpx;
}
.creator {
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
}
scroll-view{
  width: 200%;

 white-space: nowrap;
}
.scroll-box{
  width: 100%;
  padding:0 30rpx;
  box-sizing: border-box;
}
/* 搜索框 */
.search{
  position: fixed;
  top:20rpx;
  left: 50rpx;
  z-index: 1000;
}
.search-box{
  width: 100%;
  display: flex;
  padding-left: 20rpx;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 1px solid #fff;
  padding-bottom: 8rpx;
}
image{
  width: 30rpx;
}
.defaultText{
  font-size: 24rpx;
  width: 400rpx;
  color: #fff;
  width: 100%;
}
.search-input{
  width: 500rpx;
  margin-left: 16rpx;
  font-size: 28rpx;
}

