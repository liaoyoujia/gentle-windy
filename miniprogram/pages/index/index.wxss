/* miniprogram/pages/index/index.wxss */
.mainBg {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
}
.main{
  overflow-y: auto;
  width:100%;
  height:100vh;
}

.person-info{
  display: flex;
  justify-content: flex-start;
  margin-top: 100rpx;
  align-items: center;
}
.avatar{
  overflow:hidden;
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.nick-name{
  color:#fff;
  font-size: 28rpx;
}
.icon-triangle{
  margin-left: 10rpx;
}
.icon-triangle image{
  width:18rpx;
  height:22rpx;
  display: block;
}
.address{
  display: flex;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding-left:20rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.name{
  width:70%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color:#fff;
}
.name text{
  width:30%;
  font-size: 60rpx;
}
.name image{
  width: 30rpx;
  height:34rpx;
}
.time{
  font-size: 24rpx;
  color:#fff;
}

.lament{
  padding-left:20rpx;
  margin-top: 20rpx;
  text-align: left;
  font-size: 24rpx;
  color:#fff;
}
