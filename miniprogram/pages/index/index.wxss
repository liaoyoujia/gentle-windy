/* miniprogram/pages/index/index.wxss */
.mainBg {
  position: fixed;
  z-index: -1;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100vw;
  height: 100vh;
}
.main {
  overflow-y: auto;
  width: 100%;
  height: 100vh;
}

.person-info {
  display: flex;
  justify-content: flex-start;
  margin-top: 100rpx;
  align-items: center;
}
.avatar {
  overflow: hidden;
  display: block;
  width: 70rpx;
  height: 70rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 2px solid #fff;
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
}
.nick-name {
  color: #fff;
  font-size: 28rpx;
}
.icon-triangle {
  margin-left: 10rpx;
}
.icon-triangle image {
  width: 18rpx;
  height: 22rpx;
  display: block;
}
.address {
  display: flex;
  margin-top: 10rpx;
  box-sizing: border-box;
  padding-left: 20rpx;
  width: 100%;
  justify-content: space-between;
  align-items: center;
}
.name {
  width: 70%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  color: #fff;
}
.name text {
  width: 30%;
  font-size: 60rpx;
}
.name image {
  width: 30rpx;
  height: 34rpx;
}
.time {
  font-size: 24rpx;
  color: #fff;
}

.lament {
  padding-left: 20rpx;
  margin-top: 20rpx;
  text-align: left;
  font-size: 24rpx;
  color: #fff;
}
.temperature {
  text-align: center;
  color: #fff;
  font-size: 130rpx;
  margin-top: 90rpx;
}
.weather-description {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  font-size: 24rpx;
  margin-top: 60rpx;
}
.visibility {
  margin-top: 40rpx;
  padding: 10rpx 20rpx;
  background: rgba(255, 255, 255, 0.4);
  border-radius: 20rpx;
}
.sign {
  vertical-align: super;
  font-size: 48rpx;
}
.three-days {
  position: relative;
  display: flex;
  font-size: 24rpx;
  flex-direction: column;
  background: rgba(0,0,0,.4);
  margin-top: 60rpx;
  justify-content: flex-start;
  align-items: center;
  text-align: center;

}
.three-title{
  width:100%;
  padding:12rpx 0 18rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e1e1e1;
}
.three-list{
  width:100%;
  display: flex;
  justify-content: space-around;
  align-content: center;

}
.three-item{
    height: 220rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;

}
.three-item image{
  width: 18rpx;
  height:18rpx;
}
