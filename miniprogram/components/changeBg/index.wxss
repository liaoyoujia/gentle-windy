/* components/changeBg/index.wxss */
.container {
  width: 100%;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  justify-content: flex-start;
  padding: 0 20rpx;
  align-items: center;
}

.title {
  width: 100%;
  font-size: 24rpx;
  margin: 12rpx 0 20rpx;
  color:#fff;
}
.bg{
  position: fixed;
  width:100vw;
  height:100vh;
  top: 0;
  left: 0;
  z-index: -1;
  right: 0;
  bottom: 0;
}

.img-item{
  display: inline-block;
  width:150rpx;
  height:200rpx;
}
.img-item + .img-item{
  margin-left: 20rpx;
}
.img-list{
  width:1340rpx;
}
.imgs{
  width: 100%;
  overflow-x: auto;
}
.arrow{
  width:80rpx;
  height:80rpx;
  margin-top: 100rpx;
}
.arrow image{
  width:100%;
  height:100%;
}
